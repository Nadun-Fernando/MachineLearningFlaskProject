{
    "manifest_version": 2,
    "name": "Rating Predictor",
    "version": "1.0",
    "description": "Get the current URL and Predict the Rating of the Restaurant",
    "permissions": ["activeTab", "http://localhost:5000/"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "browser_action": {
        "default_title": "Get current URL",
        "default_popup": "popup.html"
    }
}
